<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="auto_change_wallpaper"
        android:title="@string/pref_auto_change_wallpaper_check_title"
        android:defaultValue="false" />
    <ListPreference
        android:dependency="auto_change_wallpaper"
        android:key="auto_change_time"
        android:title="@string/pref_auto_change_wallpaper_timer_title"
        android:defaultValue="30"
        android:entries="@array/pref_auto_change_wallpaper_time_list_titles"
        android:entryValues="@array/pref_auto_change_wallpaper_time_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
