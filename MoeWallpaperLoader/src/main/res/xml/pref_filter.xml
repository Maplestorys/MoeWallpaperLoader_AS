<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <CheckBoxPreference
        android:key="explicit_image_filter"
        android:title="@string/pref_explict_filter_title"
        android:defaultValue="true" />
    <ListPreference
        android:key="filter_size_list"
        android:title="@string/pref_filter_size_title"
        android:defaultValue=""
        android:entries="@array/pref_filter_size_list_titles"
        android:entryValues="@array/pref_filter_size_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
    <ListPreference
        android:key="filter_score_list"
        android:title="@string/pref_filter_score_title"
        android:defaultValue=""
        android:entries="@array/pref_filter_score_list_titles"
        android:entryValues="@array/pref_filter_score_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
    <ListPreference
        android:key="pref_filter_sort_method"
        android:title="@string/pref_filter_sort_method_title"
        android:defaultValue=""
        android:entries="@array/pref_filter_order_list_titles"
        android:entryValues="@array/pref_filter_order_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
